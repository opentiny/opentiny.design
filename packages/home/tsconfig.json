{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "types": ["node", "vite/client"]
  },
  "include": ["src/**/*", "src/**/*.vue", "src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules"]
}

